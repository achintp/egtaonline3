=show_for scheduler do |u|
  %h3 Scheduler Configuration
  = u.attribute :name
  = u.attribute :size, label: "Size"
  = u.attribute :simulator_fullname, label: "Simulator"
  = u.attributes :default_observation_requirement, :observations_per_simulation
  = u.attribute :process_memory, label: "Process memory (in MB)"
  = u.attribute :time_per_observation, label: "Time per sample (in seconds)"
  = u.attribute :nodes, label: "Nodes required"
  = u.attribute :active
  %h3 Simulator Configuration
  = render partial: 'configuration/parameter', collection: scheduler.configuration.to_a, locals: { u: u }
= link_to "Edit #{model_name.titleize}", "/#{model_name.tableize}/#{scheduler.id}/edit", class: 'btn btn-primary'
= link_to "Create Game to Match", create_game_to_match_scheduler_path(scheduler), method: :post, class: 'btn btn-primary'